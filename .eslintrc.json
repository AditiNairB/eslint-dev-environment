{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
		"prettier/prettier": ["error"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
       "quotes": [
		   "error",
		   "double"
	   ],
        "semi": [
            "error",
            "always"
		],
		"no-unused-vars":"warn"
    }
}
